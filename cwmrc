# Set default Xft(3) font
#fontname "sans-serif:pixelsize=15:bold"
fontname "go mono:pixelsize=18:bold"
#fontname "monaco:pixelsize=18:bold"

# Turn on sticky-group mode
sticky yes

gap 27 0 0 0

# Any entry here is shown in the application menu
command chrome          "chrome --high-dpi-support=1 --force-device-scale-factor=1.25"
command firefox         firefox
command thunderbird	thunderbird
command seamonkey	seamonkey
command office		libreoffice
command nagstamon	nagstamon
command midori		midori
command netsurf		netsurf
command top             "xterm -e top"
command big-xterm	"xterm -fs 14"
command small-xterm	"xterm -fs 10"
command white-xterm	"xterm -fg black -bg white"
command white-big-xterm	"xterm -fs 14 -fg black -bg white"
command pf-states	"xterm -e doas systat -n states 1"
command pf-rules	"xterm -e doas systat -n rules 1"
command vmstat		"xterm -e doas systat -n vmstat 1"

# Autogroup definitions
autogroup 1 Nagstamon
autogroup 5 Chromium-browser
autogroup 6 Midori
autogroup 6 Netsurf
autogroup 7 Seamonkey
autogroup 8 Firefox
autogroup 9 Thunderbird

# Color definitions
